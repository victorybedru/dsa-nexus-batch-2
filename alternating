def alternating_subsequence_sum(arr):
    n = len(arr)
    total_sum = 0
    i = 0
    while i < n:
        current_sum = arr[i]
        while i + 1 < n and (arr[i] > 0) == (arr[i + 1] > 0):
            i += 1
            current_sum = max(current_sum, arr[i])
        total_sum += current_sum
        i += 1
    return total_sum

t = int(input())
for _ in range(t):
    n = int(input())
    arr = list(map(int, input().split()))
    print(alternating_subsequence_sum(arr))
