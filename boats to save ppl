class Solution(object):
    def numRescueBoats(self, people, limit):
        boat=0
        people.sort()
        left=0
        right=len(people)-1
        while left<=right:
            if people[left]+people[right]<=limit:
                boat+=1
                right-=1
                left+=1
            else:
                right-=1
                boat+=1

        return boat       
            
